<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="checkbox"
        android:summary="@string/pref1summary"
        android:title="@string/pref1title"/>

    <EditTextPreference
        android:dialogTitle="@string/dialogtitle"
        android:key="text"
        android:summary="@string/pref3summary"
        android:title="@string/pref3title"/>

    <ListPreference
        android:dialogTitle="@string/update_interval_title"
        android:entries="@array/update_interval"
        android:entryValues="@array/update_interval_in_secs"
        android:key="list"
        android:summary="@string/choose_interval_summary"
        android:title="@string/choose_interval"/>

</PreferenceScreen>